<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xsyin.opkey.ManualActivity">

    <Button
        android:id="@+id/get_pub_key_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="获取公钥" />

    <TextView
        android:id="@+id/msg_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/get_pub_key_btn"
        android:text="手机号：" />

    <TextView
        android:id="@+id/msg_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/msg_text2"
        android:layout_alignBottom="@+id/msg_text2"
        android:layout_toEndOf="@+id/msg_text2"
        android:layout_toRightOf="@+id/msg_text2"
        android:text="  " />

    <TextView
        android:id="@+id/msg_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/msg_text3"
        android:text="公钥：" />

    <Button
        android:id="@+id/copy_public_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/get_pub_key_btn"
        android:layout_alignStart="@+id/get_pub_key_btn"
        android:layout_below="@+id/msg_text"
        android:layout_marginTop="100dp"
        android:text="复制公钥" />

    <EditText
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/copy_public_key"
        android:layout_marginTop="22dp"
        android:hint="手机号" />

    <EditText
        android:id="@+id/public_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/copy_public_key"
        android:layout_marginTop="92dp"
        android:hint="公钥" />

    <Button
        android:id="@+id/update_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/get_pub_key_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/get_pub_key_btn"
        android:layout_marginBottom="42dp"
        android:text="写入通讯录" />

</RelativeLayout>
